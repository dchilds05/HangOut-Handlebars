   <body>
      {{#if _id}}
         <nav>
            <a href="javascript:void(0);"  id = "clickBurger"><img src="/images/hamburger.png" id = "navImg1" alt = "hamburger photo"></a>
            <img id = "navImg2" src="/images/logoRectangleClose.png" alt = "logo">
            <div class = "layoutImageCropper">
               <img id = "navImg3" src={{imageUrl}} alt = "User Image">
            </div>
         </nav>
      {{/if}}
